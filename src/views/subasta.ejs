          Swal.fire({
            title: `La puja debe ser mayor a $${formatNumber(minBid)}.`,
            icon: "warning"
          });
          return;
        }

        socket.emit('bid', {
          user: username,
          bid: bidValue,
          room: auctionRoom
        });
      }

      sendButton.addEventListener('click', () => {
        const bidValue = parseInt(messageInput.value.replace(/,/g, ''));
        handleBid(bidValue);
      });

      sendCustomBidButton.addEventListener('click', () => {
        const bidValue = parseInt(customBidInput.value.replace(/,/g, ''));
