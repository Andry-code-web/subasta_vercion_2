        li.innerHTML = `<i class="fa-solid fa-share" style="color: #ffffff; margin-right: .5rem; font-size: .9rem;"></i> <b>${data.user}:</b> $${formatNumber(data.bid)}`;
        li.classList.add('shake-animation');
        messages.appendChild(li);
        setTimeout(() => li.classList.remove('shake-animation'), 2000);
        messages.scrollTop = messages.scrollHeight;
      }

