<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- FAVICON -->
  <link rel="shortcut icon" href="/img/footer_logo.svg" type="image/x-icon">
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- BOOSTRAP SCRIPT -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- BOOTSSTRAP ICON -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <!-- ICONS -->
  <script src="https://kit.fontawesome.com/78137c0870.js" crossorigin="anonymous"></script>
  <!-- ESTILOS -->
  <link rel="stylesheet" href="/css/partials/styles_envivo.css">
  <!-- estilos componentes -->
  <link rel="stylesheet" href="/css/partials/styles_header.css">
  <link rel="stylesheet" href="/css/partials/styles_footer.css">
  <link rel="stylesheet" href="/css/partials/styles_whatsapp_flot.css">
  <link rel="stylesheet" href="/css/partials/styles_search.css">

  <title>SubastaSur || En vivo</title>
</head>

<body>

  <%- include("partials/header") %>

  <div class="contenedor_cards">
    <% subastas.forEach(subasta => { %>
    <a href="/subasta/<%= subasta.id %>" class="card">
      <div class="image_container">
        <% if (subasta.imagenes && subasta.imagenes.length > 0) { %>
          <img src="data:image/png;base64,<%= subasta.imagenes[0] %>" alt="Imagen de subasta">
        <% } else { %>
          <img src="/images/default-image.png" alt="Imagen no disponible">
        <% } %>
      </div>
      <div class="title">
        <span><%= subasta.modelo %> - <%= subasta.anio %></span>
      </div>
      <div class="description">
        <p><%= subasta.descripcion %></p>
      </div>
      <div class="size">
        <span>Marca</span>
        <ul class="list-size">
          <li class="item-list"><button class="item-list-button">En vivo</button></li>
          <li class="item-list"><button class="item-list-button"><%= subasta.like_count %> Vistas</button></li>
        </ul>
      </div>
      <div class="action">
        <p>USD$: <%= formatNumber(subasta.ultima_oferta || subasta.precio_base) %></p>
      </div>
    </a>
    <% }) %>
</div>

  




</body>

</html>